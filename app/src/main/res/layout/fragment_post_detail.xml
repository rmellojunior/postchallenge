<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/recycler_margin"
    android:layout_marginStart="@dimen/recycler_margin"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/post_detail_item_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="author"
        />

    <TextView
        android:id="@+id/post_detail_item_number_of_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="4"
        tools:text="999"
        />

    <TextView
        android:id="@+id/post_detail_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="4"
        tools:text="@tools:sample/lorem/random"
        />


</LinearLayout>